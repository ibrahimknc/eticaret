<div class="modal-header bg-success">
    <div class="d-flex align-items-center" style="justify-content: space-between;">
        <h5 class="modal-title text-light float-left">
            <i class="fa fa-plus-circle" aria-hidden="true"></i>
            <b>Adres Ekle</b>
        </h5>
        <button type="button" class="close float-right" aria-label="Close" onclick="vba.modal.close()">
            <span aria-hidden="true">×</span>
        </button>
    </div>
</div>
<form method="post" onsubmit="vba.route.ccnt.funcs.updateItemAddress(this);return false" enctype="multipart/form-data">
    <div class="modal-body text-center">
        <div class="form-group">
            <div class="col-md-12">
                <label>Adres Başlığı / Firma Adı</label>
                <input type="text" value="" name="title" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6">
                <label>Adı</label>
                <input type="text" value="" name="firstName" class="form-control">
            </div>
            <div class="col-md-6">
                <label>Soyadı</label>
                <input type="text" value="" name="lastName" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <label>Ülke</label>
                <select class="form-control" name="country">
                    <option value="">Bir ülke seçin</option>
                    <option value="turkey">Türkiye</option>
                    <option value="abd">Amerika</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <label>Şehir </label>
                <input type="text" value="" name="city" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <label>Açık Adres</label>
                <textarea class="form-control textareaResize-vertical" name="address" rows="4" placeholder="Adresiniz"></textarea>
            </div>
        </div>
    </div>
    <div class="modal-footer d-flex justify-content-center">
        <input type="submit" value="Ekle" name="proceed" class="btn btn-primary">
    </div>
</form>