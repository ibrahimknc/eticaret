<!DOCTYPE html>
<html lang="tr">
<head>
    <!-- Basic Page Needs -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@await layout.settingsAsync("title")</title>
    <meta name="keywords" content="@await layout.settingsAsync("keywords")">
    <meta name="description" content="@await layout.settingsAsync("description")">
    <meta name="author" content="@veriyoneticisi.projectSettings["author"]">

    <!-- Favicon -->
    <link rel="shortcut icon" href="@veriyoneticisi.projectSettings["favicon"]" type="image/png">

    <!-- Mobile Meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Playfair+Display:300,400,700" rel="stylesheet">

    <!-- Vendor CSS -->
    <link rel="stylesheet" href="/libs/bootstrap/css/bootstrap.css">
    <link rel="stylesheet" href="/libs/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="/libs/font-material/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="/libs/nivo-slider/css/nivo-slider.css">
    <link rel="stylesheet" href="/libs/nivo-slider/css/animate.css">
    <link rel="stylesheet" href="/libs/nivo-slider/css/style.css">
    <link rel="stylesheet" href="/libs/owl.carousel/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="/libs/slider-range/css/jslider.css">

    <!-- alertifyjs CSS -->
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/alertifyjs@1.11.0/build/css/alertify.css" />
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/alertifyjs@1.11.0/build/css/themes/default.css" />

    <!-- Template CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/reponsive.css">
    <script src="//s7.addthis.com/js/300/addthis_widget.js"></script>

</head>
<body class="home home-2">
    <div id="all">
        <!-- Header -->
        <header id="header">
            <!-- Topbar -->
            <div class="topbar">
                <div class="container topbar-content">
                    <div class="row">
                        <!-- Topbar Left -->
                        <div class="col-md-7 col-sm-7 col-xs-12">
                            <div class="topbar-left d-flex">
                                <div class="email">
                                    <i class="fa fa-envelope" aria-hidden="true"></i>Email: <a href="mailto:@await layout.settingsAsync("email")">@await layout.settingsAsync("email") </a>
                                </div>
                                <div class="phone">
                                    <i class="fa fa-phone-square" aria-hidden="true"></i>phone:  <a href="tel:@await layout.settingsAsync("phone")">@await layout.settingsAsync("phone") </a>
                                </div>
                            </div>
                        </div>

                        <!-- Topbar Right -->
                        <div class="col-md-5 col-sm-5 col-xs-12">
                            <div class="topbar-right d-flex justify-content-end">
                                <!-- My Account -->
                                <div class="dropdown account">
                                    <div class="dropdown-toggle" data-toggle="dropdown">
                                        Hesap @(Context.Session.GetString("login") == "true" ? "(" + Context.Session.GetString("firstName") + ")" : "")
                                    </div>
                                    <div class="dropdown-menu">
                                        @if (!string.IsNullOrEmpty(Context.Session.GetString("id")) && (Context.Session.GetString("login") == "true"))
                                        {
                                            <div class="item">
                                                <a href="/user/profile/@Context.Session.GetString("id")" title="Open your profile in your customer account"><i class="fa fa-cog"></i>Profil</a>
                                            </div>
                                            <div class="item">
                                                <a href="/myorders" title="Sipariş Listesi"><i class="fa fa-archive"></i>Siparişlerim</a>
                                            </div>
                                            <div class="item">
                                                <a href="/user/favorites/@Context.Session.GetString("id")" title="Favorileri Listesi"><i class="fa fa-heart"></i>Favorilerim</a>
                                            </div>
                                            <div class="item">
                                                <a href="javascript:;" onclick="vba.root.signOut()" title="Çıkış Yap"><i class="fa fa-sign-out text-danger"></i>Çıkış Yap</a>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="item">
                                                <a href="/user/login" title="Müşteri hesabınızda oturum açın"><i class="fa fa-sign-in"></i>Giriş Yap</a>
                                            </div>
                                            <div class="item">
                                                <a href="/user/register" title="Hesap Kaydet"><i class="fa fa-user"></i>Kayıt Ol</a>
                                            </div>
                                        }

                                    </div>
                                </div>

                                <!-- Language -->
                                <div class="dropdown language">
                                    <div class="dropdown-toggle" data-toggle="dropdown">
                                        <i class="fa fa-language mt-1 mr-2" aria-hidden="true"></i>
                                    </div>
                                    <div class="dropdown-menu">
                                        <div class="item">
                                            <a href="#" onclick="doGTranslate('tr|tr');jQuery('div.switcher div.selected a').html(jQuery(this).html());return false;" title="Türkçe"><img src="/img/language/turkish.png" height="18" width="22" alt="turkish" class="mr-2" />Türkçe</a>
                                        </div>
                                        <div class="item">
                                            <a href="#" onclick="doGTranslate('tr|en');jQuery('div.switcher div.selected a').html(jQuery(this).html());return false;" title="English"><img src="/img/language/english.jpg" height="18" width="22" alt="english" class="mr-2" />İngilizce</a>
                                        </div>
                                        <div class="item">
                                            <a href="#" onclick="doGTranslate('tr|ru');jQuery('div.switcher div.selected a').html(jQuery(this).html());return false;" title="Rusia" class="dropdown-item"><img src="/img/language/russia.jpg" height="18" width="22" alt="Rusia" class="mr-2" />Rusça</a>
                                        </div>
                                        <div class="item">
                                            <a href="#" onclick="doGTranslate('tr|ar');jQuery('div.switcher div.selected a').html(jQuery(this).html());return false;" title="Arabic" class="dropdown-item"><img src="/img/language/arabic.png" height="18" width="22" alt="arabic" class="mr-2" />Arapça</a>
                                        </div>
                                        <div style="display:none" id="google_translate_element"></div>
                                    </div>
                                </div>

                                @*  <!-- Currency -->
                                <div class="dropdown currency">
                                <div class="dropdown-toggle" data-toggle="dropdown">
                                USD
                                </div>
                                <div class="dropdown-menu">
                                <div class="item">
                                <a href="#" title="USD">USD</a>
                                </div>
                                <div class="item">
                                <a href="#" title="EUR">EUR</a>
                                </div>
                                <div class="item">
                                <a href="#" title="GBP">GBP</a>
                                </div>
                                </div>
                                </div>*@

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Header Top -->
            <div class="header-top">
                <div class="container">
                    <div class="row margin-0">
                        <div class="col-lg-2 col-md-2 col-sm-12 padding-0">
                            <!-- Logo -->
                            <div class="logo">
                                <a href="/">
                                    <img class="img-responsive" src="@veriyoneticisi.projectSettings["logo"]" alt="Logo">
                                </a>
                            </div>

                            <span id="toggle-mobile-menu"><i class="zmdi zmdi-menu"></i></span>
                        </div>

                        <div class="col-lg-7 col-md-7 col-sm-12 padding-0">
                            <!-- Main Menu -->
                            <div id="main-menu">
                                <ul class="menu">
                                    <li class="dropdown">
                                        <a href="/" title="Homepage">Ana Sayfa</a>
                                        <div class="dropdown-menu">
                                            <ul>
                                                <li><a href="/default#categories" title="categories"><i class="zmdi zmdi-caret-right mr-3"></i> Kategoriler</a></li>
                                                <li><a href="/default#productFavorite" title="todayFavorite"><i class="zmdi zmdi-caret-right mr-3"></i> Günün Favoriler</a></li>
                                                <li><a href="/default#bulletin" title="bulletin"><i class="zmdi zmdi-caret-right mr-3"></i> Bülten</a></li>
                                                <li><a href="/default#lastcomments" title="lastcomments"><i class="zmdi zmdi-caret-right mr-3"></i> Son Yorumlar</a></li>
                                                <li><a href="/default#lastproducts" title="lastproducts"><i class="zmdi zmdi-caret-right mr-3"></i> Son Eklenen Ürünler</a></li>
                                            </ul>
                                        </div>
                                    </li>

                                    <li class="dropdown">
                                        <a href="javascript:;" title="Categories">Kategoriler</a>
                                        <div class="dropdown-menu">
                                            <ul>
                                                @foreach (var item in (List<viewCategoryDto>)await response.geCategoriesAsync())
                                                {
                                                    <li class="has-image">
                                                        <span class="arrow categoriesCountBox-Menu">@item.productCount</span>
                                                        <a href="/categories/@item.id" title="@item.name">@item.name</a>
                                                    </li>
                                                }
                                            </ul>
                                        </div>
                                    </li>

                                    <li>
                                        <a href="/aboutus">Hakkımızda</a>
                                    </li>

                                    <li>
                                        <a href="/contact">iletişim</a>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-3 col-sm-12 padding-0">
                            <!-- Cart -->
                            <div class="block-cart dropdown">
                                <div class="cart-title">
                                    <i class="fa fa-shopping-basket"></i>
                                    <span class="cart-count">0</span>
                                </div>

                                <div class="dropdown-content">
                                    <div class="cart-content">
                                        <table>
                                            <tbody class="basketCard">  </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                            <!-- Search -->
                            <div class="form-search">
                                <form id="searchForm" onsubmit="vba.root.search(this); return false;">
                                    <input type="text" class="form-input" placeholder="Ürün Ara" name="data">
                                    <button type="submit" class="fa fa-search"></button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <!-- Main Content -->
        <div id="content" class="site-content">
            <div id="pages_placeholder">
                @RenderBody()
            </div>
        </div>

        <!-- Footer -->
        <footer id="footer">
            <div class="footer">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 footer-col">
                            <div class="block text">
                                <div class="block-content">
                                    <a href="/" class="logo-footer">
                                        <img src="@veriyoneticisi.projectSettings["logo"]" alt="Logo">
                                    </a>

                                    <p>
                                       @await layout.settingsAsync("footerDetail")
                                    </p>
                                </div>
                            </div>

                            <div class="block social">
                                <div class="block-content footerSocialIcon">
                                    <ul>
                                        <li><a href="#"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-globe mr-2 icon-inline"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg></a></li>
                                        <li><a href="#">@*<i class="zmdi zmdi-facebook"></i>*@<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-facebook mr-2 icon-inline text-primary"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg></a></li>
                                        <li><a href="#">@*<i class="zmdi zmdi-twitter"></i>*@<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-twitter mr-2 icon-inline text-info"><path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path></svg></a></li>

                                        <li><a href="#">@*<i class="zmdi zmdi-instagram"></i>*@<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-instagram mr-2 icon-inline text-danger"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-5 col-md-5 col-sm-6 col-xs-12 footer-col">
                            <div class="block menu">
                                <h2 class="block-title">ÜRÜN ETİKETLERİ</h2> 
                                <div class="block-content">
                                    <div class="d-flex flex-wrap m-n1">
                                        @foreach (var item in (List<tagsDto>)await response.getTags("10"))
                                        {
                                           var random = new Random();
                                           var randomNumber = random.Next(1, item.tag.Split(",").Length);
                                           <a href="/search/@(item.tag.Split(",")[randomNumber])" class="btn btn-sm btn-outline-success m-1 text-transform-capitalize" title="@(item.tag.Split(",")[randomNumber])">@(item.tag.Split(",")[randomNumber])</a> 
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
 
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12 footer-col">
                            <div class="block text">
                                <h2 class="block-title">
                                    BİZE ULAŞIN
                                </h2>

                                <div class="block-content">
                                    <div class="contact">
                                        <div class="item d-flex align-items-center">
                                            <div>
                                                <i class="zmdi zmdi-home"></i>
                                            </div>
                                            <div>
                                                <span>@await layout.settingsAsync("address")</span>
                                            </div>
                                        </div>
                                        <div class="item d-flex align-items-center">
                                            <div>
                                                <i class="zmdi zmdi-phone-in-talk"></i>
                                            </div>
                                            <div>
                                                <span><a href="tel:@await layout.settingsAsync("phone")">@await layout.settingsAsync("phone") </a> </span>
                                            </div>
                                        </div>
                                        <div class="item d-flex align-items-center">
                                            <div>
                                                <i class="zmdi zmdi-email"></i>
                                            </div>
                                            <div>
                                                <span><a href="mailto:@await layout.settingsAsync("email")"> @await layout.settingsAsync("email") </a></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Copyright -->
            <div class="footer-copyright text-center">
                <div class="container">
                    <div class="payment">
                        <img src="/img/payment.png" alt="Payment">
                    </div> 
                    <div class="copyright">Copyright &copy; 2023 <a href="/"><b><span class="text-success">@await layout.settingsAsync("title")</span></b></a> Tüm Haklar Saklıdır. </div>
                </div>
            </div>
        </footer>

        <!-- Go Up button -->
        <div class="go-up">
            <a href="#">
                <i class="fa fa-long-arrow-up"></i>
            </a>
        </div>

        <!-- Page Loader -->
        <div id="page-preloader">
            <div class="page-loading">
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="overflow: auto">
            </div>
        </div>
    </div>

    <!-- Vendor JS -->
    <script src="/libs/jquery/jquery.js"></script>
    <script src="/libs/bootstrap/js/bootstrap.js"></script>
    <script src="/libs/jquery.countdown/jquery.countdown.js"></script>
    <script src="/libs/nivo-slider/js/jquery.nivo.slider.js"></script>
    <script src="/libs/owl.carousel/owl.carousel.min.js"></script>
    <script src="/libs/slider-range/js/tmpl.js"></script>
    <script src="/libs/slider-range/js/jquery.dependClass-0.1.js"></script>
    <script src="/libs/slider-range/js/draggable-0.1.js"></script>
    <script src="/libs/slider-range/js/jquery.slider.js"></script>
    <script src="/libs/elevatezoom/jquery.elevatezoom.js"></script>
    <script type="text/javascript" src="//cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
    <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit2"></script>
    <script src="/js/language.js"></script>
     
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.11.0/build/alertify.min.js"></script>
    <script type="text/javascript" src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script type="text/javascript" src="//cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>

    <script type="text/javascript">
        var binderObj = [];
        binderObj.push(function () {
            vba.settings.serverDate = new Date(@Html.Raw(Json.Serialize(DateTimeOffset.UtcNow)));
            vba.settings.offset = @(TimeZoneInfo.Local.GetUtcOffset(DateTime.UtcNow).TotalMinutes);
            vba.render = function (item) { return function (tok, i) { if (i % 2 && tok.length) { var val = ""; try { tok = tok.split("&gt;").join(">"); val = eval(tok); } catch (e) { } return val; } else { return tok; }; }; };
            vba.root.user = @Html.Raw((string)Newtonsoft.Json.JsonConvert.SerializeObject(await eticaret.Web.Controllers.api.userController.refreshAndGetLoginAsync(this.Context)));
        });
    </script>
    <script src="/js/app.js?v=0.01"></script>
    <!-- Template CSS -->
    <script src="/js/main.js"></script>
</body>
</html>