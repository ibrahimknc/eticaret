<div class="container">
	<div class="register-page">
		<div class="register-form form">
			<div class="block-title">
				<div class="image"><img src="/img/profil_avatar.png" class="profileAvatar" alt=""></div>
				<h2 class="title"><span>Hesap Oluştur</span></h2>
			</div> 
			<form method="post" onsubmit="vba.route.ccnt.funcs.updateItem(this);return false" enctype="multipart/form-data">
