					<label>Adı<sup class="required">*</sup></label>
					<input type="text" value="" name="firstName">
				</div>

				<div class="form-group">
					<label>Soyadı<sup class="required">*</sup></label>
					<input type="text" value="" name="lastName">
				</div>

				<div class="form-group">
					<label>Email<sup class="required">*</sup></label>
					<input type="email" value="" name="email">
				</div>

				<div class="form-group">
					<label>Şifre<sup class="required">*</sup></label>
					<input type="password" value="" name="password">
				</div>

				<div class="form-group text-center">
					<input type="submit" class="btn btn-primary" value="Kayıt Ol">
				</div>
			</form>
		</div>
	</div>
