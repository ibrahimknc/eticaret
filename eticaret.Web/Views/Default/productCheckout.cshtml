<!-- Breadcrumb -->
<div id="breadcrumb">
    <div class="container">
        <h2 class="title">Siparişi Tamamla</h2>

        <ul class="breadcrumb">
            <li><a href="/" title="Home">Ana Sayfa</a></li>
            <li><span>Siparişi Tamamla</span></li>
        </ul>
    </div>
</div>

<div class="container">
    <div class="page-checkout">
        <div class="row">
            <form method="post" onsubmit="vba.route.ccnt.funcs.updateItem(this);return false" enctype="multipart/form-data">
                <div class="checkout-left col-lg-9 col-md-9 col-sm-9 col-xs-12">
                    <div class="d-flex justify-content-end">
                        <a href="javascript:;" onclick="vba.route.ccnt.funcs.modalAddress();" class="btn btn-primary">
                            <i class="fa fa-map-marker" aria-hidden="true"></i> &nbsp;&nbsp; Adres Ekle
                        </a>
                    </div>
                    <div class="panel-group" id="accordion">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                                        <i class="fa fa-address-card" aria-hidden="true"></i> 
                                        <i class="fa fa-map" aria-hidden="true"></i>
                                        Fatura Adresi
                                    </a>
                                </h4>
                            </div>
                            <div id="collapseOne" class="accordion-body collapse" style="height: 0px;">
                                <div class="panel-body">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label>Kayıtlı Adres Seçiniz</label>
                                            <select class="form-control" name="billingUserAddress" onchange="vba.route.ccnt.funcs.changeUserAddress(this);return false">
                                                <option value="">Adres Seçin</option> 
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label>Firma Adı</label>
                                            <input type="text" value="" name="billingCompanyName" class="form-control">
                                        </div>
                                    </div>
                                 
                                    <div class="form-group">
                                        <div class="col-md-6">
                                            <label>Adı</label>
                                            <input type="text" value="" name="billingFirstName" class="form-control">
                                        </div>
                                        <div class="col-md-6">
                                            <label>Soyadı</label>
                                            <input type="text" value="" name="billingLastName" class="form-control">
                                        </div>
                                    </div>
                                   
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label>Ülke</label>
                                            <select class="form-control" name="billingCountry">
                                                <option value="">Bir ülke seçin</option>
                                                <option value="turkey">Türkiye</option>
                                                <option value="abd">Amerika</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label>Şehir </label>
                                            <input type="text" value="" name="billingCity" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label>Açık Adres</label> 
                                            <textarea class="form-control textareaResize-vertical" name="billingAddress" rows="4" placeholder="Adresiniz"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">
                                        <i class="fa fa-location-arrow" aria-hidden="true"></i> 
                                        Nakliye Adresi
                                    </a>
                                </h4>
                            </div>
                            <div id="collapseTwo" class="accordion-body collapse" style="height: 0px;">
                                <div class="panel-body">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label>Kayıtlı Adres Seçiniz</label>
                                            <select class="form-control" name="shippingUserAddress" onchange="vba.route.ccnt.funcs.changeUserAddress(this);return false">
                                                <option value="">Adres Seçin</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label>Adres Başlığı</label>
                                            <input type="text" value="" name="shippingTitle" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-6">
                                            <label>Adı</label>
                                            <input type="text" value="" name="shippingFirstName" class="form-control">
                                        </div>
                                        <div class="col-md-6">
                                            <label>Soyadı</label>
                                            <input type="text" value="" name="shippingLastName" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label>Ülke</label>
                                            <select class="form-control" name="shippingCountry">
                                                <option value="">Bir ülke seçin</option>
                                                <option value="turkey">Türkiye</option>
                                                <option value="abd">Amerika</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label>Şehir </label>
                                            <input type="text" value="" name="shippingCity" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label>Açık Adres</label> 
                                            <textarea class="form-control textareaResize-vertical" name="shippingAddress" rows="4" placeholder="Adresiniz"></textarea>

                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseThree">
                                        <i class="fa fa-shopping-basket" aria-hidden="true"></i>
                                        Ürünler
                                    </a>
                                </h4>
                            </div>
                            <div id="collapseThree" class="accordion-body collapse in" aria-expanded="true">
                                <div class="panel-body">
                                    <table class="cart-summary table table-bordered mb-0">
                                        <thead>
                                            <tr>
                                                <th class="width-80 text-center">Resim</th>
                                                <th>Ürün Adı</th>
                                                <th class="width-100 text-center">Birim Fiyatı</th>
                                                <th class="width-100 text-center">Miktar</th>
                                                <th class="width-100 text-center">Toplam</th>
                                                <th class="width-100 text-center">Kargo Fiyatı</th>
                                            </tr>
                                        </thead>
                                        <tbody class="productBody">  </tbody>
                                    </table>
                                    <h4 class="heading-primary">Seçenek</h4>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <span class="remember-box checkbox">
                                                <label>
                                                    <input type="checkbox" checked="checked">Fatura adresine kargolansın?
                                                </label>
                                            </span>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="checkout-right col-lg-3 col-md-3 col-sm-3 col-xs-12">
                    <h4 class="title">Ödenecek Toplam</h4>
                    <table class="table cart-total">
                        <tbody class="totalBody"> </tbody>
                    </table>
                    <div class="d-flex justify-content-center align-items-center">
                        <input type="submit" value="Sipariş Ver (Ödeme Yap)" name="proceed" class="btn btn-primary">
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>