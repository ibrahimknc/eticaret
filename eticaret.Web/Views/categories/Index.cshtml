<div id="content" class="site-content">
	<!-- Breadcrumb -->
	<div id="breadcrumb">
		<div class="container"> 
			<ul class="breadcrumb">
				<li><a href="/" title="Home">Ana Sayfa</a></li>
				<li><a href="/" title="categories">Kategoriler</a></li>
				<li><span class="activePageName"> </span></li>
			</ul>
		</div>
	</div>
	 
	<div class="container">
		<div class="row">
			<!-- Sidebar -->
			<div id="left-column" class="sidebar col-lg-3 col-md-3 col-sm-3 col-xs-12">
				  
				<!-- Block - Filter -->
				<div class="block product-filter">
					<h3 class="block-title t-center">Ürün Filtrele</h3>
					<hr class="hrStyle-seven" />
					<div class="block-content">
						<div class="filter-item">
							<h3 class="filter-title">Categories</h3>

							<div class="filter-content">
								<ul>
									<li>
										<label class="check">
											<span class="custom-checkbox">
												<input type="checkbox">
												<span class="checkmark"></span>
											</span>
											<a>Tomato <span class="quantity">(20)</span></a>
										</label>
									</li>
									<li>
										<label class="check">
											<span class="custom-checkbox">
												<input type="checkbox">
												<span class="checkmark"></span>
											</span>
											<a>Broccoli <span class="quantity">(14)</span></a>
										</label>
									</li>
									<li>
										<label class="check">
											<span class="custom-checkbox">
												<input type="checkbox">
												<span class="checkmark"></span>
											</span>
											<a>Cabbage <span class="quantity">(8)</span></a>
										</label>
									</li>
									<li>
										<label class="check">
											<span class="custom-checkbox">
												<input type="checkbox">
												<span class="checkmark"></span>
											</span>
											<a>Cucumber <span class="quantity">(12)</span></a>
										</label>
									</li>
									<li>
										<label class="check">
											<span class="custom-checkbox">
												<input type="checkbox">
												<span class="checkmark"></span>
											</span>
											<a>Eggplant <span class="quantity">(15)</span></a>
										</label>
									</li>
									<li>
										<label class="check">
											<span class="custom-checkbox">
												<input type="checkbox">
												<span class="checkmark"></span>
											</span>
											<a>Pea <span class="quantity">(22)</span></a>
										</label>
									</li>
									<li>
										<label class="check">
											<span class="custom-checkbox">
												<input type="checkbox">
												<span class="checkmark"></span>
											</span>
											<a>Pineapple <span class="quantity">(20)</span></a>
										</label>
									</li>
									<li>
										<label class="check">
											<span class="custom-checkbox">
												<input type="checkbox">
												<span class="checkmark"></span>
											</span>
											<a>Lettuce <span class="quantity">(10)</span></a>
										</label>
									</li>
								</ul>
							</div>
						</div>
						 
						<div class="filter-item">
							<h3 class="filter-title"> FİYATA GÖRE </h3>

							<div class="block-content">
								<div id="slider-range" class="tiva-filter">
									<div class="filter-item price-filter">
										<div class="layout-slider">
											<input id="price-filter" name="price" value="0;10000" />
										</div>
										<div class="layout-slider-settings"></div>
									</div>
								</div>
							</div>
						</div>

						<div class="filter-item">
							<h3 class="filter-title">By Color</h3>

							<div class="block-content">
								<div class="filter-color">
									<div class="left">
										<div class="item">
											<label class="color color-1"></label>
											<span class="color-label">Blue</span>
											<span>(3)</span>
										</div>
										<div class="item">
											<label class="color color-3"></label>
											<span class="color-label">Yellow</span>
											<span>(2)</span>
										</div>
										<div class="item">
											<label class="color color-5"></label>
											<span class="color-label">Pink</span>
											<span>(2)</span>
										</div>
									</div>
									<div class="right">
										<div class="item">
											<label class="color color-2"></label>
											<span class="color-label">Green</span>
											<span>(1)</span>
										</div>
										<div class="item">
											<label class="color color-4"></label>
											<span class="color-label">Brown</span>
											<span>(3)</span>
										</div>
										<div class="item">
											<label class="color color-6"></label>
											<span class="color-label">Red</span>
											<span>(10)</span>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="filter-item" style="margin-top:150px"> 
							<div class="block-content" >
								<hr class="hrStyle-seven" />
							<div class="form-group text-center">
									<button class="btn btn-primary" onclick="vba.route.ccnt.funcs.filterOperations(); return false;">Filtrele</button>
							</div>
							</div>
						</div>
					</div>
				</div>

				<!-- Product Tags -->
				<div class="block tags product-tags">
					<h3 class="block-title">ÜRÜN ETİKETLERİ</h3>

					<div class="block-content">
						<ul id="tagsContainer" > 
						</ul>
					</div>
				</div>
			</div>

			<!-- Page Content -->
			<div id="center-column" class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
				<div class="product-category-page">
					
					<!-- Nav Bar -->
					<div class="products-bar">
						<div class="row">
							<div class="col-md-6 col-xs-6">
								<div class="gridlist-toggle" role="tablist">
									<ul class="nav nav-tabs">
										<li class="active" id="gridProductButton" ><a href="javascript:;" onclick="vba.route.ccnt.funcs.getProductsGrid(); return false;" ><i class="fa fa-th-large"></i></a></li>
										<li id="listProductButton"><a href="javascript:;" onclick="vba.route.ccnt.funcs.getProductsList(); return false;"><i class="fa fa-bars"></i></a></li>
									</ul>
								</div>

								<div class="total-products">0 ÜRÜN VAR</div>
							</div>

							<div class="col-md-6 col-xs-6">
								<div class="filter-bar">
									<form action="#" class="pull-right">
										<div class="select">
											<select class="form-control" id="listSorting" >
												<option value="0">Önerilen Sıralama</option>
												<option value="1">Fiyat: Önce en düşük</option>
												<option value="2">Fiyat: Önce en yüksek</option>
												<option value="3">Ürün Adı: A'dan Z'ye</option>
												<option value="4">Ürün Adı: Z'den A'ya</option>
												<option value="5">Stokta var</option>
											</select>
										</div>
									</form> 
								</div>
							</div>
						</div>
					</div>

					<div class="tab-content">
						<!-- Products Grid -->
						<div class="tab-pane active" id="products-grid">
							<div class="products-block">
								<div class="row dataContainer">
									<div class="col-lg-4 col-md-4 col-sm-6 col-xs-12" data-repeat="items">
										<div class="product-item">
											<div class="product-image">
												<a href="/detail">
													<img class="img-responsive" src="/uploads/products/{{item.image}}" alt="Product Image">
												</a>
											</div>

											<div class="product-title">
												<a href="/detail">
													{{item.name}}
												</a>
											</div>

											<div class="product-rating">
												<div class="star on"></div>
												<div class="star on"></div>
												<div class="star on "></div>
												<div class="star on"></div>
												<div class="star"></div>
											</div>

											<div class="product-price">
												<span class="sale-price">{{item.salePrice}} &#x20BA;</span>
												<span class="base-price">{{item.basePrice}} &#x20BA;</span>
											</div>

											<div class="product-buttons">
												<a class="add-to-cart" href="#">
													<i class="fa fa-shopping-basket" aria-hidden="true"></i>
												</a>

												<a class="add-wishlist" href="#">
													<i class="fa fa-heart" aria-hidden="true"></i>
												</a>

												<a class="quickview" href="#">
													<i class="fa fa-eye" aria-hidden="true"></i>
												</a>
											</div>
										</div>
									</div> 
								</div>
							</div>
						</div> 
					</div>

					<!-- Pagination Bar -->
					<div class="pagination-bar">
						<div class="row">
							<div class="col-md-4 col-sm-4 col-xs-12">
								<div class="text showingTotalProducts">Toplam 0 Üründen 0 Adet Gösteriliyor</div>
							</div>

							<div class="col-md-8 col-sm-8 col-xs-12">
								<div class="pagination">
									<ul class="page-list" id="pagination">
										<li><a href="javascript:;" onclick="vba.route.ccnt.items.filterForm.page = 1; vba.route.ccnt.funcs.getItems(); return false;" class="prev"><span class="fa fa-angle-double-left" aria-hidden="true"></span></a></li>
										<li><a href="javascript:;" onclick="if (vba.route.ccnt.items.filterForm.page != 1) { vba.route.ccnt.items.filterForm.page -= 1; } vba.route.ccnt.funcs.getItems(); return false;" class="prev"><span class="fa fa-angle-left" aria-hidden="true"></span></a></li>
										<li class="nav-page"><a href="#" class="current">0</a></li> 
										<li><a onclick="if (vba.route.ccnt.items.filterForm.page != vba.route.ccnt.items.filterForm.totalPage) { vba.route.ccnt.items.filterForm.page += 1; } vba.route.ccnt.funcs.getItems(); return false;" class="next">  <span class="fa fa-angle-right" aria-hidden="true"></span></a></li>
										<li><a href="javascript:;" onclick="vba.route.ccnt.items.filterForm.page = vba.route.ccnt.items.filterForm.totalPage; vba.route.ccnt.funcs.getItems(); return false;" class="next"><span class="fa fa-angle-double-right" aria-hidden="true"></span></a></li>
									</ul>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>